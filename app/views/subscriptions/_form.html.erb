<%= simple_form_for [@district, @subscription] do |form| %>
  <% if subscription.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(subscription.errors.count, "error") %> prohibited this subscription from being saved:</h2>

      <ul>
      <% subscription.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<div class="field">
	  <%= form.association :customer, collection: @customers, include_blank: false, label: "Kunde:" %>
	</div>

	<div class="field">
	  <%= form.association :newspaper, as: :radio_buttons, label_method: :full_name, label: "Zeitung:" %>
	</div>

  <div class="row">
    <div class="col">
      <%= form.input :is_monday, as: :boolean, label: "MO" %>
    </div>
    <div class="col">
      <%= form.input :is_tuesday, as: :boolean, label: "DI" %>
    </div>
    <div class="col">
      <%= form.input :is_wednesday, as: :boolean, label: "MI" %>
    </div>
    <div class="col">
      <%= form.input :is_thursday, as: :boolean, label: "DO" %>
    </div>
    <div class="col">
      <%= form.input :is_friday, as: :boolean, label: "FR" %>
    </div>
    <div class="col">
      <%= form.input :is_saturday, as: :boolean, label: "SA" %>
    </div>
  </div>

  <div class="actions">
    <%= form.button :submit, "Speichern", class: "btn btn-outline-secondary" %>
  </div>
<% end %>